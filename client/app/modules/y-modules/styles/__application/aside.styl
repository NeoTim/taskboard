app-aside-defaults()
  transition all 300ms ease-in-out
  -webkit-transition all 300ms ease-in-out

app-aside-left()
  width $application-aside-width
  height calc(100% - $application-header-height)
  app-aside-defaults()

app-aside-left-fold()
  width $application-aside-fold-width

app-aside-right()
  width $application-aside-width
  height calc(100% - $application-header-height)
  app-aside-defaults()