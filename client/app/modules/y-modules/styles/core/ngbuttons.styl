$btn-sizes = xs sm md lg xl

btn-shadow()
  shadow-z-2()
  transition box-shadow transform 0.28s cubic-bezier(0.4, 0, 0.2, 1)
  &:active:not(.btn-link)
      shadow-z-3()
  &:hover
      shadow-z-5()




