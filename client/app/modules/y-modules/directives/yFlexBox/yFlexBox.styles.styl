// Utils

$default-size
$default-width

$display = flex
$box-lines = multiple
$box-sizing = border-box


$cols = one two three four five six seven eight nine ten eleven twelve
$columns = 12
$column-width = calc(100% / $columns)
// $media-sizes =
//   xs: 460px,
//   sm: 768px,
//   md: 992px,
//   lg: 1200px




util-box-sizgin()
  -webkit-box-sizing $box-sizing
  -moz-box-sizing $box-sizing
  box-sizing $box-sizing

util-display()
  display -webkit-box
  display -moz-box
  display -webkit-flex
  display -ms-flexbox
  display box
  display flex

util-box-lines()
  -webkit-box-lines: multiple;
  -moz-box-lines: multiple;
  -o-box-lines: multiple;

// columns-width(num)
util-flex-basis(num)
  -webkit-flex-basis: (100%/12*num) !important
  flex-basis: (100%/12*num) !important

uitil-build-flex-grid(screen=false)

  for num in 1..12
    if screen
      &.f-{screen}-{num}
        util-flex-basis(num)
    else
      &.f-{num}
        util-flex-basis(num)

util-padding-side-pads()
  padding-left 1rem
  padding-right 1rem


util-offset-margins(num)
  margin-left: (100%/12*num)

util-flex(num)
  flex num
  -webkit-flex num

y-flex-row()
  -webkit-flex-flow: row !important
  flex-flow: row !important



Flexible-box-gutters()
  // margin-left: (100%/12*num)
  margin-left: -1em

Flexible-flex-pads()
  padding-left 1rem


Flexible-box-top()
  align-items: flex-start

Flexible-box-bottom()
  align-items: flex-end

Flexible-box-center()
  align-items: center

/* Alignment per cell */
Flexible-flex-top()
  align-self: flex-start

Flexible-flex-bottom()
  align-self: flex-end

Flexible-flex-center()
  align-self: center

/* Base classes for all media */
// .Grid--fit > .Grid-cell

Flexible-box-flex(num)
  -webkit-flex: num
  flex: num

Flexible-box-full()
  Flexible-singel-box(1)

Flexible-box-grid( start, mid, end )
  -webkit-flex: start mid end
  flex: start mid end

Flexible-box-screen(start, mid, end)
  @media (min-width $screen-xs)
    {block}
  @media (min-width $screen-sm)
    {block}
  @media (min-width $screen-md)
    {block}
  @media (min-width $screen-lg)
    {block}


y-box()
  util-box-sizing()
  util-display()
  util-box-lines()

  .y-flex
    Flexible-box-flex(1)

y-gutters()

  Flexible-box-gutters()

  .y-flex
    Flexible-flex-pads()


.y-flex-box

  y-box()

  &.size-100
    size 100%

  &.y-flex-gutter
    y-gutters()

  &.y-box-top
    Flexible-box-top()
  &.y-box-bottom
    Flexible-box-bottom()
  &.y-box-cenert
    Flexible-box-cenert()

.y-flex
  // y-box()

  &.y-flex-top
    Flexible-flex-top()
  &.y-flex-bottom
    Flexible-flex-bottom()
  &.y-flex-bottom
    Flexible-flex-bottom()

.y-flex-box > .y-flex
  util-build-flex-grid()
@media(min-width: 460px)
  .y-flex-box > .y-flex
    util-build-flex-grid('xs')
@media(min-width: 769px)
  .y-flex-box > .y-flex
    util-build-flex-grid('sm')
@media(min-width: 992px)
  .y-flex-box > .y-flex
    util-build-flex-grid('md')
@media(min-width: 1200px)
  .y-flex-box > .y-flex
    util-build-flex-grid('lg')
@media(min-width: 1366px)
  .y-flex-box > .y-flex
    util-build-flex-grid('xl')


build-responsive-grid(size)
  .y-flex-box.y-flex-{size}.y-box-fit > .y-flex
    util-flex(1)
  .y-flex-box.y-flex-{size}.y-box-full > .y-flex
    Flexible-box-grid(0,0,100%)
  .y-flex-box.y-flex-{size}.y-box-1--2 > .y-flex
    Flexible-box-grid(0,0,50%)
  .y-flex-box.y-flex-{size}.y-box-1--3 > .y-flex
    Flexible-box-grid(0,0,33.3333%)
  .y-flex-box.y-flex-{size}.y-box-1--4 > .y-flex
    Flexible-box-grid(0,0,25%)

build-base-grid()
  .y-flex-box.y-box-fit > .y-flex
    util-flex(1)
  .y-flex-box.y-box-full > .y-flex
    Flexible-box-grid(0,0,100%)
  .y-flex-box.y-box-1--2 > .y-flex
    Flexible-box-grid(0,0,50%)
  .y-flex-box.y-box-1--3 > .y-flex
    Flexible-box-grid(0,0,33.3333%)
  .y-flex-box.y-box-1--4 > .y-flex
    Flexible-box-grid(0,0,25%)

build-base-grid()
@media(min-width: 460px)
  build-responsive-grid(xsmall)
@media(min-width: 769px)
  build-responsive-grid(small)
@media(min-width: 992px)
  build-responsive-grid(medium)
@media(min-width: 1200px)
  build-responsive-grid(large)
@media(min-width: 1366px)
  build-responsive-grid(xlarge)






.flex-row,
[flex-row]
  y-box()
  flex-direction: row
  flex-wrap: wrap


.flex-auto,
[flex-auto]
  -webkit-box-flex 1
  -moz-box-flex 1
  -o-box-flex 1
  box-flex 1
  -webkit-flex 1 1 0 !important
  -ms-flex 1 1 0 !important
  flex 1 1 0 !important

.flex-verticle,
[flex-verticle]
  y-box()
  size 100%
  -webkit-flex-direction: column;
  flex-direction: column;




