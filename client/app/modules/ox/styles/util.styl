.no-pad
  padding:0
.no-pad-t
  padding-top:0
.no-pad-r
  padding-right:0
.no-pad-b
  padding-bottom:0
.no-pad-l
  padding-left:0

.stream-container
  width 100%
  height 100%
  display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;

  -webkit-flex-flow: row wrap;
  flex-flow: row wrap;

  font-weight: bold;
  text-align: center;

.stream-header
  min-width 100%
  max-height 50px
  height 50px
  -webkit-flex 1 100%
  flex 1 100%

.stream-aside
  min-width 200px
  -webkit-flex 1 200px
  flex 1 200px

.stream-content
  -webkit-flex 1 100%
  flex 1 100%

@media all and (min-width: 768px) {
  .stream-content    { flex: 3 0px; }
  .stream-header    { order: 1; }
  .stream-aside       { order: 2; }
  .stream-content    { order: 3; }
}
