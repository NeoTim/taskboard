.ox-tool
  // width 50px
  font-weight normal
  padding 0 10px
  margin 0
  line-height 30px
  font-size 1.6em
  text-decoration none

  &:hover,
  &:active,
  &:focus,
  &:visited,
  &.active
    color inherit
    text-decoration none

  &.btn
    background-color inherit
    &:hover
      background-color inherit
      box-shadow none
      -webkit-box-shadow none

  > *
    // margin 0 8px

  h2, h3
    font-weight normal

  a
    color inherit
    text-decoration none
